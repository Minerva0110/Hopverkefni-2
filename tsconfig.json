{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "ESNext",                           
    "outDir": "./dist",           
    "rootDir": "./src",          
    "strict": true,                
    "esModuleInterop": true,       
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,          
    "noEmitOnError": true,
    "moduleResolution": "node",
    "allowJs": false          
  },
  "include": ["src"],            
  "exclude": ["node_modules", "dist"]
}
