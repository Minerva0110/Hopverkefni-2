{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",                          
    "outDir": "./dist",           
    "rootDir": "src",
    "types": ["jest"],          
    "strict": true,                
    "esModuleInterop": true,       
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,          
    "noEmitOnError": true,
    "allowJs": false          
  },
  "include": ["src"],            
  "exclude": ["node_modules", "dist"]
}
